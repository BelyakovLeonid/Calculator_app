<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.example.lab.calculator">

    <application
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">

        <!-- Приветственный экран -->
        <activity android:name=".View.StartScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <!-- Экран стандартного калькулятора -->
        <activity android:name=".View.StandartCalc">
        </activity>

        <!-- Экран инженерного калькулятора -->
        <activity android:name=".View.EngeneerCalc">
        </activity>
        <activity android:name=".View.Settings">
        </activity>
    </application>

</manifest>